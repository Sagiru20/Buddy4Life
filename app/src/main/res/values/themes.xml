<resources>
    <!-- Base application theme. -->
    <style name="Theme.Buddy4Life" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
    </style>

    <style name="AddPostTheme.OutlinedBox" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="boxStrokeColor">?attr/colorPrimary</item>
        <item name="helperTextTextColor">@color/helper_text_color</item>
        <item name="android:textColorHint">@drawable/text_color_hint</item>
        <item name="endIconTint">@color/colorPrimary</item>
        <item name="counterTextColor">@color/colorPrimary</item>
        <item name="errorTextColor">@color/red</item>
        <item name="boxStrokeErrorColor">@color/red</item>
        <item name="errorIconTint">@color/red</item>
    </style>

    <style name="AddPostTheme.OutlinedBox.ExposedDropdownMenu" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="boxStrokeColor">?attr/colorPrimary</item>
        <item name="helperTextTextColor">@color/helper_text_color</item>
        <item name="android:textColorHint">@drawable/text_color_hint</item>
        <item name="endIconTint">@color/colorPrimary</item>
        <item name="errorTextColor">@color/red</item>
        <item name="boxStrokeErrorColor">@color/red</item>
        <item name="errorIconTint">@color/red</item>
    </style>

    <style name="AddPostTheme.TextField" parent="Widget.AppCompat.EditText">
        <!-- Customize the text color inside the box when typing -->
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="AddPostTheme.AutoCompleteTextView" parent="Widget.AppCompat.AutoCompleteTextView">
        <!-- Customize the text color for the AutoCompleteTextView -->
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorSecondaryContainer">#BBDEFB</item>
    </style>
</resources>