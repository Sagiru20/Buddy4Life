<resources>
    <!-- Base application theme. -->
    <style name="Theme.Buddy4Life" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AddPostTheme.OutlinedBox" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="boxStrokeColor">?attr/colorPrimary</item>
        <item name="helperTextTextColor">@color/helper_text_color</item>
        <item name="android:textColorHint">@drawable/text_color_hint</item>
        <item name="endIconTint">@color/colorPrimary</item>
        <item name="counterTextColor">@color/colorPrimary</item>

    </style>

    <style name="AddPostTheme.OutlinedBox.ExposedDropdownMenu" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="boxStrokeColor">?attr/colorPrimary</item>
        <item name="helperTextTextColor">@color/helper_text_color</item>
        <item name="android:textColorHint">@drawable/text_color_hint</item>
        <item name="endIconTint">@color/colorPrimary</item>
    </style>

    <style name="AddPostTheme.TextField" parent="Widget.AppCompat.EditText">
        <!-- Customize the text color inside the box when typing -->
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="AddPostTheme.AutoCompleteTextView" parent="Widget.AppCompat.AutoCompleteTextView">
        <!-- Customize the text color for the AutoCompleteTextView -->
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Theme.BottomNavigation" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black_200</item>
        <item name="colorPrimaryVariant">@color/black_200</item>
        <item name="colorOnPrimary">@color/black_200</item>

        <!-- Primary brand color. -->
        <item name="colorSecondary">@color/black_200</item>
        <item name="colorSecondaryVariant">@color/black_200</item>
        <item name="colorOnSecondary">@color/black_200</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorSecondaryVariant</item>
    </style>
</resources>